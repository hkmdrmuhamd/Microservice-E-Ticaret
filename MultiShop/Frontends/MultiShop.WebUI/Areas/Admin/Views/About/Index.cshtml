@model List<ResultAboutDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<section class="content container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="chart-box">
                <div class="bs-example" data-example-id="bordered-table">
                    @if(Model.Count < 1)
                    {
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>Şirket Hakkında</th>
                                    <th>Şirket Adresi</th>
                                    <th>Şirket Maili</th>
                                    <th>Şirket Telefonu</th>
                                    <th>Sil</th>
                                    <th>Güncelle</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.Description</td>
                                        <td>@item.Address</td>
                                        <td>@item.Email</td>
                                        <td>@item.Phone</td>
                                        <td><a href="/Admin/About/DeleteAbout/@item.AboutId" class="btn btn-danger">Sil</a></td>
                                        <td><a href="/Admin/About/UpdateAbout/@item.AboutId" class="btn btn-success">Güncelle</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <a href="/Admin/About/CreateAbout" class="btn btn-primary">Yeni Hakkımızda Girişi</a>
                    }
                    else if(Model.Count >= 1)
                    {
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>Şirket Hakkında</th>
                                    <th>Şirket Adresi</th>
                                    <th>Şirket Maili</th>
                                    <th>Şirket Telefonu</th>
                                    <th>Sil</th>
                                    <th>Güncelle</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.Description</td>
                                        <td>@item.Address</td>
                                        <td>@item.Email</td>
                                        <td>@item.Phone</td>
                                        <td><a href="/Admin/About/DeleteAbout/@item.AboutId" class="btn btn-danger">Sil</a></td>
                                        <td><a href="/Admin/About/UpdateAbout/@item.AboutId" class="btn btn-success">Güncelle</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <a href="" class="btn btn-danger disabled">Yeni Hakkımızda Girişi Eklenemez</a>
                    }
                </div>
            </div>
        </div>
    </div>
</section>