@model UpdateBrandDto

@{
    ViewData["Title"] = "UpdateBrand";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<section class="content container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="chart-box">
                <div class="bs-example" data-example-id="bordered-table">
                    <form method="post">
                        <h4>Marka Güncelleme Sayfası</h4>
                        <input type="hidden" asp-for="BrandId" />
                        <br />
                        <h5>Marka Adı</h5>
                        <input type="text" class="form-control" asp-for="BrandName" />
                        <br />
                        <h5>Marka Görseli</h5>
                        <input type="text" class="form-control" asp-for="ImageUrl" />
                        <br />
                        <button class="btn btn-success">Markayı Güncelle</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
